<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:id="@+id/main_layout"
    tools:context="uk.wycor.competitivecolours.app.MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:padding="0dp">

        <ToggleButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|top"
            android:layout_marginTop="30dp"
            android:checked="false"
            android:textOn="@string/toggle_bluetooth_on"
            android:textOff="@string/toggle_bluetooth_off"
            android:layout_centerHorizontal="true"
            android:id="@+id/toggle_bluetooth_enabled" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/button_make_discoverable"
            android:id="@+id/button_make_discoverable"
            android:layout_centerHorizontal="true"
            android:textColor="@android:color/primary_text_light" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/button_search_for_devices"
            android:id="@+id/button_search_for_devices"
            android:layout_centerHorizontal="true"
            android:textColor="@android:color/primary_text_light" />

        <TextView
            android:text="@string/device_list_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/device_list_title" />

        <TextView
            android:text="@string/device_list_time_elapsed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/device_list_time_elapsed" />

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/device_list">
            </ListView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:minHeight="30dp"
        android:orientation="horizontal"
        android:weightSum="3" >

        <Button
            android:layout_width="0dp"
            android:layout_weight="0.75"
            android:layout_height="match_parent"
            android:text="@string/button_red"
            android:id="@+id/button_red" />

        <Button
            android:layout_width="0dp"
            android:layout_weight="0.75"
            android:layout_height="match_parent"
            android:text="@string/button_green"
            android:id="@+id/button_green" />

        <Button
            android:layout_width="0dp"
            android:layout_weight="0.75"
            android:layout_height="match_parent"
            android:text="@string/button_blue"
            android:id="@+id/button_blue" />

        <Button
            android:layout_width="0dp"
            android:layout_weight="0.75"
            android:layout_height="match_parent"
            android:text="@string/button_yellow"
            android:id="@+id/button_yellow" />
    </LinearLayout>
</LinearLayout>
